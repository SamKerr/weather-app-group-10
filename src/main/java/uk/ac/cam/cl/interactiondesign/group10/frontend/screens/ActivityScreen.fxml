<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox fx:id="root" prefHeight="800" prefWidth="450" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="uk.ac.cam.cl.interactiondesign.group10.frontend.screens.ActivityScreen">
    <children>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Activity Suggestion for"/>
        <Text fx:id="textCurrentLocation" strokeType="OUTSIDE" strokeWidth="0.0"/>
        <Text fx:id="textCurrentActivity" strokeType="OUTSIDE" strokeWidth="0.0"/>

        <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#goBack" text="Back"/>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</VBox>
